# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Vercel Configuration
VERCEL_ENV=development

# Upload Configuration
MAX_FILE_SIZE=52428800
# Include common mobile/desktop formats
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg,video/avi,video/mov,video/quicktime,video/x-matroska,video/3gpp,video/3gpp2

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# Admin (server-side)
# Required in production; used to validate x-admin-token on /api/admin routes
ADMIN_DASHBOARD_TOKEN=generate_a_strong_random_token_here
